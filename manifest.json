{
  "manifest_version": 2,
  "name": "Task Manager",
  "version": "1.0",
  "description": "A simple to-do task manager extension",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {

    "default_title": "Task Manager"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
